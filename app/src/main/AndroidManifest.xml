<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Talkgrow_"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- 스플래시 (런처) : 기록 남기지 않게 noHistory 권장 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 메인 -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize" />

        <!-- 카메라 / 전처리 결과 (내부 진입만) -->
        <activity android:name=".CameraActivity" android:exported="false" />
        <activity android:name=".PreprocessResultActivity" android:exported="false" />

        <!-- ✅ 아바타 화면 (안드로이드 UI + Unity 재생 제어) -->
        <!-- 클래스 패키지가 com.talkgrow_.AvatarGenerateActivity 인지 확인! -->
        <activity
            android:name="com.talkgrow_.AvatarGenerateActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

        <!-- Unity 전용 호스트 (UnityPlayer 붙였다 떼기) -->
        <activity
            android:name="com.talkgrow_.unity.UnityHostActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"
            android:resizeableActivity="false"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|uiMode|density"/>

        <!-- Unity 기본 액티비티 제거(중복 방지) -->
        <activity
            android:name="com.unity3d.player.UnityPlayerActivity"
            tools:node="remove" />

    </application>
</manifest>
