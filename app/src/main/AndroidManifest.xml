<?xml version="1.0" encoding="utf-8"?>
<!--
  작성자: 조경주, 최보은
  작성일: 2025-07-06
  설명: 앱의 권한 설정과 액티비티 등록을 정의하는 AndroidManifest.xml 파일
       - 카메라 권한과 하드웨어 지원 선언
       - 스플래시 화면, 메인 화면, 카메라 화면 액티비티 등록
       - 앱 아이콘 및 테마 설정 포함
  수정 이력:
        - 오디오 사용 권한 추가
  TODO:
       - 필요 시 추가 권한 및 기능 확장
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 카메라 사용 권한 선언 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 오디오 사용 권한 선언 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <!-- 카메라 하드웨어 필수 여부 설정 -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <uses-permission android:name="android.permission.INTERNET"/>


    <!-- 앱 아이콘, 이름, 동그란 아이콘, RTL 지원, 테마 설정 -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Talkgrow_"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- 스플래시 화면 액티비티 (앱 시작 시 가장 먼저 실행) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 메인 화면 액티비티 -->
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"/>

        <!-- 카메라 화면 액티비티 -->
        <activity android:name=".CameraActivity" android:exported="true"/>

        <!--PreprocessResultActivity -->
        <activity android:name=".PreprocessResultActivity" />


    </application>

</manifest>