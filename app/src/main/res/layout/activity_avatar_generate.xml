<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvatarGenerateActivity">

    <!-- 1) 전체화면 플레이어 호스트 (영상/아바타가 들어가는 영역) -->
    <FrameLayout
        android:id="@+id/playerHost"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 실제 영상/렌더 뷰: VideoView/SurfaceView/UnityPlayerView 등으로 교체 가능 -->
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible" />

        <!-- 전체화면 반투명 오버레이 (초기 VISIBLE) -->
        <View
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <!-- (선택) 안내 문구 -->
        <TextView
            android:id="@+id/previewHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재생을 누르면 아바타가 시작됩니다"
            android:textColor="#FFFFFFFF"
            android:background="#66000000"
            android:padding="8dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- 2) 우측 상단 닫기(X) 버튼 (플레이어 위로 떠 있게) -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:padding="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="닫기"
        android:elevation="8dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 3) 하단 중앙 컨트롤 바 (재생/일시정지) - 플레이어 위로 떠 있게 -->
    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="재생" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_pause"
            android:contentDescription="일시정지" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
